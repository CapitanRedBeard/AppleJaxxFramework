{
  "pages": [
    {
      "key": "list_page",
      "style": {
          "backgroundColor": "#4D5057"
      },
      "data": [
        {
          "type": "url",
          "url": "https://pokeapi.co/api/v2/pokemon/",
          "returnPath": "results",
          "binding": "pokemonz"
        }
      ],
      "components": [
        {
          "type": "list",
          "style": {
            "backgroundColor": "#999999"
          },
          "rowOnClickEval": {
            "key": "feature_page",
            "type": "push",
            "param": {
              "dataSource": {
                "type": "param_url",
                "url": "pokemonz.url"
              }
            }
          },
          "rowTemplate": [
            {
               "type": "thumbnail",
               "style": {
                 "borderColor": "white",
                 "borderWidth": 1
               },
               "attributes": {
                 "source": "picture.thumbnail",
                 "size": 50
               }
            },
            {
              "type": "text",
              "style": {
                "fontSize": 20,
                "color": "white"
              },
              "binding": "name"
            },
            {
              "type": "text",
              "style": {
                "fontSize": 16,
                "color": "#CCCCCC"
              },
              "binding": "description"
            }
          ],
          "separator": {},
          "header": {},
          "footer": {},
          "sectionHeader": {}
        }
      ]
    }
  ],
  "metaData": {
    "frameID": "listFrame"
  }
}
