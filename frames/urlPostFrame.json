{
  "pages": [
    {
      "key": "page1",
      "title": "Page One",
      "subtitle": "numero uno",
      "navigatorStyle": {
        	"navBarBackgroundColor": "#4e8ef7",
        	"drawUnderNavBar": false,
        	"navBarTextColor": "white",
        	"navBarButtonColor": "white",
        	"statusBarTextColorScheme": "dark"
      },
      "navigatorButtons": {
        "leftButtons": [
          {
            "icon": "ios-menu",
            "id": "menu"
          }
        ],
        "animated": true
      },
      "style": {
        "backgroundColor": "#333",
      },
      "components": [
        {
          "type": "input",
          "binding": "post_body_param",
          "borderColor": "#9c3fff",
          "borderWidth": 2,
          "inputProps": {
            "placeholder": "This binding matches the body parameter",
            "placeholderTextColor": "white",
            "style": {
              "color": "#9c3fff"
            }
          },
          "iconProps": {
            "name": "ios-bonfire-outline",
            "style": {
              "color": "#9c3fff"
            }
          }
        },
        {
          "type": "button",
          "text": "Submit Post",
          "event": {
            "eventType": "urlPost",
            "params": {
              "url": "https://posttestserver.com/post.php",
              "body": {
                "users_input": "foo {{post_body_param}} baz"
              }
            }
          },
          "style": {
            "button": {
              "backgroundColor": "#9c3fff",
              "flex": 1,
              "alignSelf": "stretch",
              "margin": 10
            }
          }
        }
      ]
    }
  ],
  "bindings": {
    "post_body_param": {
      "type": "string"
    }
  },
  "metaData": {
    "frameID": "inputFrame"
  }
}
