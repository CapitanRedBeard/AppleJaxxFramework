{
  "drawer": {
     "left": {
         "screen": "drawer"
     },
     "animationType": "slide-and-scale",
     "style": {
         "leftDrawerWidth": 75,
         "drawerShadow": false,
         "contentOverlayColor": "#333333"
     }
  },
  "pages": [
    {
      "key": "stories",
      "title": "Stories",
      "subtitle": "numero uno",
      "navigatorStyle": {
        	"navBarBackgroundColor": "#F93751",
        	"drawUnderNavBar": true,
        	"navBarTextColor": "white",
        	"navBarButtonColor": "white",
        	"statusBarTextColorScheme": "light"
      },
      "navigatorButtons": {
        "rightButtons": [
          {
            "title": "Edit",
            "id": "edit",
            "disabled": true,
            "disableIconTint": true,
            "showAsAction": "ifRoom",
          },
          {
            "icon": "ios-ionic",
            "id": "menu2",
            "event": {
              "eventType": "toggleDrawer",
              "params": {
                "side": "right",
                "animated": true,
              }
            }
          }
        ],
        "leftButtons": [
          {
            "icon": "ios-menu",
            "id": "menu",
            "event": {
              "eventType": "toggleDrawer",
              "params": {
                "side": "left",
                "animated": true,
              }
            }
          }
        ],
        "animated": true
      },
      "style": {
        "backgroundColor": "#dddddd",
      },
      "components": [
        {
          "type": "list",
          "style": {
            "backgroundColor": "white"
          },
          "refreshable": {
              "tintColor": "#F93751",
              "title": "Refreshing!",
              "titleColor": "#F93751"
          },
          "events": {
            "onPress": {
              "params": "article",
              "eventType": "push"
            }
          },
          "rowData": {
            "type": "url",
            "params": {
              "url": "https://www.reddit.com/r/all/hot.json",
              "dataPath": "data.children"
            }
          },
          "rowTemplate": {
            "leftSection": [
              {
                 "type": "thumbnail",
                 "source": "{{data.thumbnail}}",
                 "square": true,
                 "attributes": {
                   "square": true,
                   "size": 50
                 }
              }
            ],
            "centerSection": [
              {
                "type": "text",
                "style": {
                  "fontSize": 16,
                  "color": "#333",
                  "paddingLeft": 10
                },
                "text": "{{data.title}}"
              },
              {
                "type": "text",
                "style": {
                  "fontSize": 12,
                  "lineHeight": 12,
                  "color": "#888",
                  "paddingLeft": 20
                },
                "text": "{{data.author}}"
              }
            ],
            "rightSection": [
              {
                "type": "text",
                "style": {
                  "fontSize": 12,
                  "lineHeight": 12,
                  "color": "#888",
                  "paddingLeft": 20
                },
                "text": "{{data.score}}"
              }
            ]
          },
          "separator": {
              "backgroundColor": "#4e8ef7",
              "marginLeft": 75
          }
        },
        {
          "type": "button",
          "text": "Open Drawer",
          "attributes": ["bordered"],
          "style": {
            "button": {
              "margin": 5,
              "borderColor": "#F93751",
              "borderWidth": 2,
              "alignSelf": "stretch"
            },
            "buttonText": {
              "color": "#F93751"
            }
          },
          "events": {
            "onPress": {
              "params": "article",
              "eventType": "push"
            }
          }

        }
      ]
    },
    {
      "key": "article",
      "title": "Article",
      "subtitle": "numero duo",
      "navigatorStyle": {
        	"navBarBackgroundColor": "#292949",
        	"navBarTextColor": "#EDECEE",

        	"drawUnderNavBar": true,
        	"navBarButtonColor": "#EDECEE",
        	"statusBarTextColorScheme": "light"
      },
      "style": {
        "backgroundColor": "#292949",
      },
      "components": [
        {
          "layout": "1:2",
          "type": "text",
          "style": {
            "textAlign": "center",
            "fontSize": 24,
            "fontFamily": "Helvetica Neue",
            "color": "white"
          },
          "text": "{{data.title}}"
        }
      ]
    },
    {
      "key": "drawer",
      "layout": "2:2",
      "style": {
        "backgroundColor": "#333"
      },
      "components": [
        {
          "layout": "1:2",
          "type": "text",
          "style": {
            "fontSize": 24,
            "fontFamily": "Helvetica Neue",
            "color": "#333333"
          },
          "text": "Drawer"
        },
        {
          "type": "button",
          "layout": "1:2",
          "text": "Drawer",
          "eval": {
            "key": "page1",
            "type": "push"
          },
          "attributes": [
            "success",
            "block"
          ],
          "style": {}
        }
      ]
    }
  ],
  "metaData": {
    "frameID": "listFrame"
  },
	"theme": {
		"defaultSpinnerColor": "#F93751",
    "fontFamily": "Futura"
	}
}
