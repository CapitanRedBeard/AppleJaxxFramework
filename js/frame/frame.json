{
  "drawer": {
     "left": {
         "screen": "drawer"
     },
     "right": {
         "screen": "drawer"
     },
     "animationType": "door",
     "style": {
         "leftDrawerWidth": 50,
         "rightDrawerWidth": 100,
         "drawerShadow": false,
         "contentOverlayColor": "#333333"
     }
  },
  "pages": [
    {
      "key": "cardPage",
      "title": "Card Page",
      "subtitle": "el cardo",
      "navigatorStyle": {
          "navBarBackgroundColor": "transparent",
        	"drawUnderNavBar": true,
        	"navBarTextColor": "white",
        	"navBarButtonColor": "white",
        	"statusBarTextColorScheme": "light",
          "navBarTranslucent": true,
          "navBarBlur": true
      },
      "navigatorButtons": {
        "rightButtons": [
          {
            "title": "Edit",
            "id": "edit",
            "disabled": true,
            "disableIconTint": true,
            "showAsAction": "ifRoom",
          },
          {
            "icon": "ios-ionic",
            "id": "menu2",
            "event": {
              "eventType": "toggleDrawer",
              "params": {
                "side": "right",
                "animated": true,
              }
            }
          }
        ],
        "leftButtons": [
          {
            "icon": "ios-menu",
            "id": "menu",
            "event": {
              "eventType": "toggleDrawer",
              "params": {
                "side": "left",
                "animated": true,
              }
            }
          }
        ],
        "animated": true
      },
      "style": {
        "backgroundColor": "rgba(0,0,0,0.5)",
        "paddingTop": 50
      },
      "backgroundImage": "https://unsplash.it/900/600/?random",
      "components": [
        {
          "type": "cards",
          "transparent": false,
          "style": {
            "padding": 20
          },
          "refreshable": {
              "tintColor": "white",
              "title": "Finding More...",
              "titleColor": "white"
          },
          "rowData": {
            "type": "url",
            "params": {
              "url": "https://jsonplaceholder.typicode.com/users/",
            }
          },
          "rowTemplate": {
            "cardStyle": {
              "borderColor": "red",
              "borderWidth": 0,
              "borderBottomWidth": 2
            },
            "rowSections": [
              {
                 "style": {
                   "padding": 10,
                   "justifyContent": "flex-start",
                   "alignItems": "center"
                 },
                 "components": [
                   {
                     "type": "thumbnail",
                     "source": "https://unsplash.it/200/300/?random",
                     "attributes": {
                       "size": 30
                     }
                   },
                   {
                     "type": "text",
                     "style": {
                       "fontSize": 16,
                       "color": "#333",
                       "paddingLeft": 10
                     },
                     "text": "{{name}}"
                   }
                 ]
              },
              {
                 "style": {
                   "height": 150
                 },
                 "components": [
                   {
                     "type": "image",
                     "source": "https://unsplash.it/600/?random",
                     "style": {
                     },
                     "resizeMode": "cover",
                     "indicator": {
                       "type": "bar",
                       "params": {}
                     }
                   }
                 ]
              },
              {
                 "style": {
                     "padding": 10,
                 },
                 "components": [
                   {
                     "type": "text",
                     "style": {
                       "fontSize": 12,
                       "lineHeight": 12,
                       "color": "#888"
                     },
                     "text": "{{company.catchPhrase}} {{company.catchPhrase}} {{company.catchPhrase}} {{company.catchPhrase}}"
                   }
                 ]
              },
              {
                 "style": {
                     "paddingRight": 10,
                     "paddingBottom": 10,
                     "justifyContent": "flex-end",
                     "alignItems": "center"

                 },
                 "components": [
                   {
                     "type": "badge",
                     "style": {
                       "backgroundColor": "#333",
                     },
                     "textStyle": {
                       "fontSize": 12,
                       "color": "red",
                     },
                     "count": "{{id}}"
                   }
                 ]
              }
            ]
          }
        }
      ]
    },
    {
      "key": "drawer",
      "layout": "2:2",
      "style": {
        "backgroundColor": "#333"
      },
      "components": [
        {
          "layout": "1:2",
          "type": "text",
          "style": {
            "fontSize": 24,
            "fontFamily": "Helvetica Neue",
            "color": "#333333"
          },
          "text": "Drawer"
        },
        {
          "type": "button",
          "layout": "1:2",
          "text": "Drawer",
          "eval": {
            "key": "page1",
            "type": "push"
          },
          "attributes": [
            "success",
            "block"
          ],
          "style": {}
        }
      ]
    }
  ],
  "metaData": {
    "frameID": "listFrame"
  },
	"theme": {
		"defaultSpinnerColor": "white",
    "fontFamily": "Futura"
	}
}
